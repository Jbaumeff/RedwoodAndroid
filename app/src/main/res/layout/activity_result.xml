<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="edu.msu.cse.wegschei.redwoodandroid.ResultActivity">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/walk"
            android:id="@+id/textWalk" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/dummy"
            android:id="@+id/textWalkDuration"
            android:layout_toRightOf="@+id/textWalk" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/arrival_time"
            android:id="@+id/textWalkArrivalLabel"
            android:layout_alignBaseline="@+id/textWalkArrivalTime"
            android:layout_toLeftOf="@+id/textWalkArrivalTime" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/dummy"
            android:id="@+id/textWalkArrivalTime"
            android:layout_below="@+id/textWalkDuration"
            android:layout_alignLeft="@+id/textWalkDuration" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/bus"
            android:id="@+id/textBus" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/dummy"
            android:id="@+id/textBusDuration"
            android:layout_toRightOf="@+id/textBus" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/arrival_time"
            android:id="@+id/textBusArrivalLabel"
            android:layout_alignBaseline="@+id/textBusArrivalTime"
            android:layout_toLeftOf="@+id/textBusArrivalTime" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/dummy"
            android:id="@+id/textBusArrivalTime"
            android:layout_below="@+id/textBusDuration"
            android:layout_alignLeft="@+id/textBusDuration" />

    </RelativeLayout>

</LinearLayout>
